<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.account.AccountFragment">

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/text_account"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="@id/tv_account"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        app:tint="@color/design_default_color_primary" />

    <TextView
        android:id="@+id/tv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/text_edit_profile"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/iv_edit"
        app:layout_constraintTop_toTopOf="@id/iv_edit" />

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_edit" />

    <ImageView
        android:id="@+id/iv_account_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintStart_toStartOf="@id/iv_edit"
        app:layout_constraintTop_toBottomOf="@id/iv_edit"
        app:tint="@color/design_default_color_primary" />

    <TextView
        android:id="@+id/tv_account_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/text_account_setting"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/tv_edit_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_profile" />

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_account_setting" />

    <ImageView
        android:id="@+id/iv_logout"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintStart_toStartOf="@id/iv_account_setting"
        app:layout_constraintTop_toBottomOf="@id/iv_account_setting"
        app:tint="@color/design_default_color_primary" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/text_logout"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/tv_account_setting"
        app:layout_constraintTop_toBottomOf="@id/tv_account_setting" />

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logout" />


</androidx.constraintlayout.widget.ConstraintLayout>